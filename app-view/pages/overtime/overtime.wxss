
page {
  background-color: #FAFAFA;
}
.picker {
    width: 100%;
    height: 118rpx;
    line-height: 118rpx;
    padding: 0rpx 42rpx;
    border: 2rpx solid #DCDCDC;
    font-size: 36rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: none;
}
.last{
  border-bottom: 2rpx solid #DCDCDC;
}
.picker text {
    float: right;
    color: #999999;
}
.Reason {
    width: 100%;
    padding: 42rpx;
    box-sizing: border-box;
    background-color: #fff;
}
h3 {
  font-size: 36rpx;
  color: #666666;
  margin: 10px 0px;
  font-weight: 600;
  letter-spacing: 4rpx;
}
textarea {
  width: 100%;
  height: 250rpx;
  margin-top: 20rpx;
}
.fr {
  float: right;
  color: #DCDCDC
}
.fr span{
  color: #FF8330
}
.btn {
  width: 620rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #03A3FF;
  color: #fff;
  margin: 80rpx auto;
  font-size: 32rpx;
  font-weight: 600;
}